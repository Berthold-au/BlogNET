@model Article

@{
    ViewData["Title"] = "Ajouter un article";
}

<h1>Ajouter un article</h1>

<form class="form" method="post">
    <div class="alert alert-danger">Quelque chose ses mal passer.</div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" placeholder="Nom de l'article" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div><br />
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" placeholder="Contenu de l'article" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div><br />
    <button type="submit" class="btn btn-primary">Ajouter l'article</button>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}