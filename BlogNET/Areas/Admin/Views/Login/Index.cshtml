@model User
@{
    ViewData["Title"] = "Se connecter";
}

<h1>Se connecte</h1>
<p>Cette session est reverser au administrateur du site.</p>

<form class="form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for ="Name" placeholder="Votre nom d'utilisateur" class="form-control" />
    </div><br />
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Votre mot de passe" class="form-control" />
    </div><br />
    <button type="submit" class="btn btn-primary">Se connecter</button>
</form>